---
const cards = [
    {
        link: "/ficha-tecnica/index.html",
        icon: "bi bi-file-earmark-ruled text-app-green-400",
        name: "Ficha Técnica",
        nameClassColor: "bg-app-green-400",
    },
    {
        link: "/dos/index.html",
        icon: "bi bi-bar-chart text-app-cyan-400",
        name: "DOS",
        nameClassColor: "bg-app-cyan-400",
    },
    {
        link: "/manutencao/index.html",
        icon: "bi bi-gear text-app-blue-400",
        name: "Manutenção",
        nameClassColor: "bg-app-blue-400",
    },
    {
        link: "/operacoes-galerias/index.html",
        icon: "bi bi-columns text-app-pink-700",
        name: "Operações Galerias",
        nameClassColor: "bg-app-pink-700",
    },
    {
        link: "/comercial/index.html",
        icon: "bi bi-buildings text-app-red-400",
        name: "Comercial",
        nameClassColor: "bg-app-red-400",
    },
    {
        link: "/lojas-galerias/obras/timeline/index.html",
        icon: "bi bi-clipboard2-check text-app-orange-400",
        name: "Lojas Galerias",
        nameClassColor: "bg-app-orange-400",
    },
    {
        link: "/dev-imobiliario/index.html",
        icon: "bi bi-building-fill-gear text-app-yellow-400",
        name: "Desenvolvimento Imobiliário",
        nameClassColor: "bg-app-yellow-400",
    },
];
---

<div class="slide-in-blurred-bottom principal-cards">
    {
        cards.map(({ link, icon, name, nameClassColor }) => (
            <div class="col-card">
                <a class="link-card" href={link}>
                    <figure>
                        <div class="content-icon">
                            <i class={icon}></i>
                        </div>
                    </figure>
                    <h4 class={nameClassColor}>{name}</h4>
                </a>
            </div>
        ))
    }
</div>

<style>
    .navbar-toggler{
        display: none;
    }

    .principal-cards {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;

        max-width: 1300px;
        margin: 0 auto;
        padding: 3rem 0.5rem;

        --bs-gutter-x: 1.5rem;
        --bs-gutter-y: 0;
    }

    .principal-cards .col-card{
        padding-right: calc(var(--bs-gutter-x) * .2);
        padding-left: calc(var(--bs-gutter-x) * .2);
        margin-top: var(--bs-gutter-y);
        width: 100%;
        max-width: 100%;
        width: 160px
    }

    .principal-cards .link-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 1.5rem;
        height: 18rem;
        overflow: hidden;
        text-decoration: none;
        color: #555;
    }

    .principal-cards .link-card figure {
        position: relative;
        margin: 0 0 0.0rem 0;
        padding: 1rem;
        width: 100%;
        height: 80%;
        border-radius: 0.5rem 0.5rem 0 0;
        overflow: hidden;
        transition: all 0.3s;
        background-color: #fff;
        box-shadow: 0 0.375rem 1.5rem #8c98a420;
    }

    .principal-cards .link-card figure .content-icon {
        font-size: 4rem;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        transition: all 0.2s;
    }

    .principal-cards .link-card h4 {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 50px;
        margin: 0;
        padding: 1rem 0.5rem;
        text-align: center;
        font-weight: 400;
        font-size: 1rem;
        border-radius: 0 0 0.5rem 0.5rem;
        transition: all 0.3s;
        color: #fff;
    }

    .principal-cards .link-card:hover figure {
        color: #fff;
        background-color: var(--color-purple-400);
    }

    .principal-cards .link-card:hover figure .content-icon {
        top: 30%;
        left: 50%;
        transform: translate(-50%, -30%);
    }
    .principal-cards .link-card:hover figure .content-icon i{
        color: #fff;
    }

    .principal-cards .link-card:hover h4 {
        color: var(--color-purple-400);
        background-color: #fff;
    }

    @media (max-width: 1160px) {
        .principal-cards .col-card{
            width: 200px
        }
        .principal-cards .link-card {
            height: 11rem;
        }
        .principal-cards .link-card figure .content-icon {
            font-size: 3rem;
        }
    }
    @media (max-width: 930px) {
        .principal-cards .col-card{
            width: 160px
        }
    }
    @media (max-width: 690px) {
        .principal-cards .col-card{
            width: 145px
        }
    }
    @media (max-width: 630px) {
        .principal-cards .col-card{
            width: 50%
        }
        .principal-cards .link-card {
            height: 8rem;
        }
    }
</style>
