<div class="card">
    <div class="card-body">
        <div class="section-title">
            <span class="title">Seleção</span>
        </div>

        <form method="" action="">
            <section class="row">
                <label class="col-xl-3 col-lg-4 col-md-6 col-sm-6">Formato:
                    <select name="formato" class="selectpicker" multiple data-actions-box="true" data-live-search="true" data-width="100%" required>
                        <option value="1">Formato 1</option>
                        <option value="2">Formato 3</option>
                        <option value="3">Formato 2</option>
                    </select>
                </label>

                <label class="col-xl-3 col-lg-4 col-md-6 col-sm-6">Região:
                    <select name="regiao" class="selectpicker" multiple data-actions-box="true" data-live-search="true"
                        data-width="100%" required>
                        <option value="1">Região 1</option>
                        <option value="2">Região 3</option>
                        <option value="3">Região 2</option>
                    </select>
                </label>

                <label class="col-xl-3 col-lg-4 col-md-6 col-sm-6">Site:
                    <select name="site" class="selectpicker" multiple data-actions-box="true" data-live-search="true"
                        data-width="100%" required>
                        <option value="1">Site 1</option>
                        <option value="2">Site 3</option>
                        <option value="3">Site 2</option>
                    </select>
                </label>

                <label class="col-xl-3 col-lg-4 col-md-6 col-sm-6">Tipo:
                    <select name="tipo" class="selectpicker" multiple data-actions-box="true" data-live-search="true" data-width="100%"
                        required>
                        <option value="1">Satelites</option>
                        <option value="2">Âncoras</option>
                        <option value="3">Stan Alone</option>
                    </select>
                </label>

                <label class="col-xl-3 col-lg-4 col-md-6 col-sm-6">Lojista:
                    <select name="lojista" class="selectpicker" multiple data-actions-box="true" data-live-search="true" data-width="100%"
                        required>
                        <option value="1">Lojista 1</option>
                        <option value="2">Lojista 3</option>
                        <option value="3">Lojista 2</option>
                    </select>
                </label>


                <label class="col-xl-3 col-lg-4 col-md-6 col-sm-6">Lojas com Obras:
                    <select name="loja_obras" class="selectpicker" multiple data-actions-box="true" data-live-search="true" data-width="100%"
                        required>
                        <option value="1">Sim</option>
                        <option value="2">Não</option>
                    </select>
                </label>

                <label class="col-xl-3 col-lg-4 col-md-6 col-sm-6">Lojas com Vistoria:
                    <select name="loja_vistorias" class="selectpicker" multiple data-actions-box="true" data-live-search="true" data-width="100%"
                        required>
                        <option value="1">Sim</option>
                        <option value="2">Não</option>
                    </select>
                </label>

                <div class="col-xl-3 col-lg-8 col-md-6 col-sm-6">
                    <div class="label-clearfix last-sm"></div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-primary">Ok</button>
                        <button type="submit" class="btn btn-success">Exportar Excel</button>
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>
