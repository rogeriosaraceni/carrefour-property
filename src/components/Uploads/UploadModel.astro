---
interface Props {
    complementoTitulo?: string;
    displayBtn?: string;
    linkModelo?: string;
}

const {
    complementoTitulo,
    displayBtn,
    linkModelo
} = Astro.props;
---

<div class="card">
    <div class="card-body">
        <div class="section-title">
            <span class="title">Anexar Documentos {complementoTitulo}</span>
        </div>

        <form method="post" action="">
            <section class="row">
                <label class="col-lg-6 col-md-6">
                    <input type="file" name="" class="form-control" multiple="">
                </label>

                <div class="col-lg-6 col-md-6">
                    <a class="btn btn-success btn-sm" style={displayBtn} download="" href={linkModelo}>
                        <i class="bi bi-download"></i>
                        Baixar Arquivo Modelo
                    </a>
                </div>
            </section>
        </form>
    </div>
</div>
